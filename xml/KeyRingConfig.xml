<?xml version="1.0" encoding="UTF-8"?>
<Definition>
    <Import url="mod://Ankama_Config/ui/template/configCheckbox.xml" />
	<Import url="[config.mod.template]button/simpleButton.xml" />

  	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
       <Constant name="css" value="[config.ui.skin]css/" />
   	</Constants>

	<Container name="configUiCtr">

		<!-- Label title -->

		<Label name="lbl_title1">
			<Anchors>
				<Anchor>
					<AbsDimension x="0" y="0" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="750" y="20" />
			</Size>

			<text>[ui.option.miscellaneousOptions]</text>
			<css>[local.css]titleSmall.css</css>
		</Label>

		<!-- Texture tx_bgForeground1-->

		<Texture name="tx_bgForeground1">
			<Anchors>
				<Anchor relativeTo="lbl_title1">
					<AbsDimension x="0" y="30" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="780" y="70" />
			</Size>

			<autoGrid>true</autoGrid>
			<uri>[local.assets]tx_darkBg</uri>
		</Texture>

		<!-- PARTIE 1 -->

		<SimpleButton name="btn_reset">
			<Anchors>
				<Anchor>
					<AbsDimension x="290" y="50" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="200" y="30" />
			</Size>

			<label>Reset module</label>
		</SimpleButton>
	</Container>
</Definition>

